<div class="row">
  <div class="col-md-12">
    <h2><%= @technology.title %></h2>
    <div>
      <% if @technology.image.attached? %>
        <%= image_tag @technology.image.variant(resize: "160x90") %>
      <% end %>
    </div>
    <div>
      説明: <%= @technology.content %>
    </div>
    <hr>
    
    <div>
      <h3>コメント一覧</h3>
      <table class="table table-striped">
        <% if @technology.comments.any? %>
          <thead class="thead-light">
            <tr>
              <td>説明</td>
              <td>名前</td>
              <td>メニュー</td>
              <td>更新日時</td>
            </tr>
          </thead>
          <tbody>
            <% @technology.comments.each do |com| %>
              <tr>
                <td>
                  <%= com.content %>
                </td>
                <td>
                  <%= com.user.name %>
                </td>
                <td>
                  [ <%= link_to '編集', edit_technology_comment_path(@technology, com) %> ]
                  [ <%= link_to '削除', technology_comment_path(@technology, com), method: :delete, data:{ confirm: '本当に削除してもよろしいですか？'} %> ]  
                </td>
                <td><%= com.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <p>まだコメントはありません。</p>
        <% end %>
        
      </table>
      
    </div>
    
    <h3>新しいコメントを投稿します。</h3>
    
    <%= form_with model: [@technology,@comment], local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <%= f.hidden_field :technology_id, { value: @technology.id} %>
      <div class="form-group">
        <label>説明</label>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="text-center">
        <%= f.submit "送信", class: 'btn btn-primary' %>
      </div>
    
    <% end %>
    
    <div>
      <%= link_to '投稿一覧ページに戻る', technologies_path %>
    </div>
  </div>
</div>
