<h2>投稿一覧</h2>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>タイトル</th>
          <th>説明</th>
          <th>会社名</th>
          <th>名前</th>
          <th>メニュー</th>
        </tr>
      </thead>
      <tbody>
        <% @technologies.each do |technology| %>
          <tr>
            <td><%= technology.id %></td>
            <td><%= link_to technology.title, technology_path(technology) %></td>
            <td><%= technology.content %></td>
            <td><%= technology.company %></td>
            <td><%= technology.name %></td>
            <td>[ <%= link_to '編集', edit_technology_path(technology) %> ] [ <%= link_to '削除', technology_path(technology), method: :delete, data:{ confirm: '本当に削除してもよろしいですか？' } %> ]</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @technologies %>
    <div>
      <%= link_to '新規投稿', new_technology_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
