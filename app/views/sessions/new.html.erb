<u><h2 class='text-center'>ログイン</h2></u>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', autocomplete: 'off' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
    <% end %>

    <p><%= link_to 'アカウント作成はこちら', signup_path %></p><br>
    
    <div class="sessions-box">
      <span class="box-title">閲覧用アカウント</span>
      <div class='text-center'>
        <p>メールアドレス：　guest@email.jp</p>
        <p>パスワード：　guest</p>
      </div>
    </div>
  </div>
</div>
